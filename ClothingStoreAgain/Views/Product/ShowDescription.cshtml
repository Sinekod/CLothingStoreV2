@model ProductItemViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Name</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .product-container {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .product-image {
            border-radius: 10px;
            transition: transform 0.3s ease-in-out;
        }
        .product-image:hover {
            transform: scale(1.05);
        }
        .product-details {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .btn-primary, .btn-outline-secondary {
            border-radius: 30px;
            padding: 10px 20px;
        }
        .price-tag {
            font-size: 1.5rem;
            color: #28a745;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="product-container">
            <div class="row">
                <div class="col-md-6">
                    <!-- Product Image with hover effect -->
                    <img src="@Model.ImgIrl" class="img-fluid product-image" alt="@Model.Name" />
                </div>
                <div class="col-md-6">
                    <div class="product-details">
                        <!-- Product Details -->
                        <h1 class="mb-3">@Model.Name</h1>
                      
                        <p class="price-tag">$@Model.Price</p>
                        <p class="mb-4">@Model.Description</p>
                        
                        <!-- Size Dropdown -->
                        <div class="mb-3">
                            <label for="sizeSelect" class="form-label">Select Size:</label>
                            <select id="sizeSelect" class="form-select">
                                @foreach (var size in Model.Sizes)
                                {
                                    <option value="@size">@size</option>
                                }

                               
                            </select>
                        </div>

                        <!-- Color Dropdown -->
                        <div class="mb-3">
                            <label for="colorSelect" class="form-label">Select Color:</label>
                           
                            <select id="colorSelect" class="form-select">
                                @foreach (var colour in Model.Colours)
                                {
                                    <option value="@colour.Id">@colour.Name</option>
                                }
                               
                            </select>
                        </div>

                        <!-- Action Buttons with rounded edges -->
                        <div class="d-flex align-items-center">
                            <button class="btn btn-primary me-3">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </button>
                            <a href="/Product/ShowAllProducts" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Products
                            </a>
                        </div>

                        <!-- Additional Information Section -->
                        <div class="mt-4">
                            <h5>Additional Information</h5>
                            <ul class="list-unstyled">
                                <li><strong>Category: @Model.Category</strong></li>
                                <li><strong>Brand: @Model.Brand</strong> </li>
                                
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
