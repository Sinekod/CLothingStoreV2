
@model IEnumerable<IdentityRole>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add Role</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Delete Role</h2>

        <form asp-controller="Roles" asp-action="DeleteRole" method="post">
            <div class="mb-3">
                <label for="roleName" class="form-label">Delete Role</label>
                <select name="roleName" class="form-select">
                    <option value="">All Roles</option>
                    @foreach (var role in Model)
                    {
                        <option value="@role.Name">@role.Name</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Delete Role</button>
        </form>
    </div>
</body>
</html>